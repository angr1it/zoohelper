{
	"name": "zoohelper",
	"dockerComposeFile": [
		"../docker-compose.yml"
	  ],
	"service": "notebook",
	"runServices": ["notebook"],

	"workspaceFolder": "/code",
	"customizations": {
        "vscode": {
            "settings": { 
                "terminal.integrated.profiles.linux": {
                    "bash": {
                        "path": "/bin/bash"
                    }
                }
            },
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-azuretools.vscode-docker",
                "ms-python.flake8",
                "ms-python.black-formatter",
                "cweijan.vscode-database-client2",
                "ms-toolsai.jupyter"
            ]
        }
    }
}
